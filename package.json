{
  "name": "cnis-mcp-server",
  "version": "1.1.0",
  "description": "Crypto News Intelligence Server - Secure MCP server with triple protocol support for crypto news aggregation and analysis",
  "main": "build/index.js",
  "type": "module",
  "bin": {
    "cnis-mcp": "./build/index.js"
  },
  "files": [
    "build/",
    "README.md",
    ".env.example",
    "healthcheck.js"
  ],
  "scripts": {
    "build": "tsc && chmod 755 build/index.js && chmod 755 build/http-server.js",
    "start": "node build/index.js",
    "start:http": "HTTP_MODE=true node build/http-server.js",
    "start:websocket": "WEBSOCKET_MODE=true node build/http-server.js",
    "start:full": "FULL_MODE=true node build/http-server.js",
    "dev": "npm run build && npm start",
    "dev:http": "npm run build && npm run start:http",
    "dev:websocket": "npm run build && npm run start:websocket",
    "dev:full": "npm run build && npm run start:full",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "test": "npm run build && npm run test:protocols",
    "test:protocols": "node build/test/protocol-tests.js",
    "test:validate": "npm run validate:versions && npm run validate:mcp && npm run validate:n8n",
    "validate:versions": "node --version && npm --version && npm outdated",
    "validate:mcp": "npm run build && npm run test:protocols",
    "validate:n8n": "npm run build && node build/test/n8n-tests.js",
    "check-updates": "npx npm-check-updates",
    "update-all": "npx npm-check-updates -u && npm install",
    "audit": "npm audit fix --force",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf build/",
    "watch": "tsc --watch"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "crypto",
    "news",
    "intelligence",
    "bitcoin",
    "ethereum",
    "analysis"
  ],
  "author": "Kaayaan Infrastructure",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.1",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "rss-parser": "^3.13.0",
    "uuid": "^13.0.0",
    "ws": "^8.18.3",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.5.2",
    "@types/ws": "^8.18.1",
    "typescript": "^5.9.2"
  }
}
