{
  "name": "cnis-mcp-server",
  "version": "1.0.0",
  "description": "Crypto News Intelligence Server - MCP server with triple protocol support for crypto news aggregation and analysis",
  "main": "build/index.js",
  "type": "module",
  "bin": {
    "cnis-mcp": "./build/index.js"
  },
  "files": [
    "build/",
    "README.md",
    ".env.example"
  ],
  "scripts": {
    "build": "tsc && chmod 755 build/index.js && chmod 755 build/http-server.js",
    "start": "node build/index.js",
    "start:http": "HTTP_MODE=true node build/http-server.js",
    "start:websocket": "WEBSOCKET_MODE=true node build/http-server.js",
    "start:full": "FULL_MODE=true node build/http-server.js",
    "dev": "npm run build && npm start",
    "dev:http": "npm run build && npm run start:http",
    "dev:websocket": "npm run build && npm run start:websocket",
    "dev:full": "npm run build && npm run start:full",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "test": "npm run build && npm run test:protocols",
    "test:protocols": "node build/test/protocol-tests.js",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf build/",
    "watch": "tsc --watch"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "crypto",
    "news",
    "intelligence",
    "bitcoin",
    "ethereum",
    "analysis"
  ],
  "author": "Kaayaan Infrastructure",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "rss-parser": "^3.13.0",
    "uuid": "^9.0.1",
    "ws": "^8.18.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.24",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.18.1",
    "typescript": "^5.3.3"
  }
}
